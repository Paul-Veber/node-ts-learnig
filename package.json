{
  "name": "nodejs-ts_learning",
  "version": "1.0.0",
  "description": "learning node and ts",
  "main": "server.js",
  "author": "paul veber",
  "license": "MIT",
  "dependencies": {
    "ejs": "^3.1.6",
    "express": "^4.17.2",
    "express-validator": "^6.14.0",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^27.4.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.10",
    "@types/supertest": "^2.0.11",
    "concurrently": "^7.0.0",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  },
  "scripts": {
    "start": "npm run serve",
    "webpack": "webpack",
    "build": "npm run build-ts",
    "serve": "node dist/server.js",
    "test": "jest --coverage=false --verbose",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\" \"yarn webpack\"",
    "watch-node": "nodemon dist/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "eslint src/*.ts",
    "lint-fix": "yarn lint --fix",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"npm run serve-debug\" \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" ",
    "typecheck": "tsc --noEmit",
    "run-prettier": "prettier src/*.ts",
    "validate-prettiness": "yarn run-prettier -c",
    "make-prettier": "yarn run-prettier --write"
  }
}
